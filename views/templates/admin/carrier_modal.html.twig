<div class="modal fade" id="sendyCreateCarrierModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">{{ 'Add new carrier'|trans({}, 'Admin.Shipping.Feature') }}</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <p>
                    {{ 'Carriers you create here will have a parcelshop picker button available at checkout. If you are looking to create a regular carrier, please use the "Add new carrier" button on the %link_start%Carriers page%link_end%.'|trans({
                        '%link_start%': '<a href="' ~ path('admin_carriers_index') ~ '">',
                        '%link_end%': '</a>'
                    }, 'Modules.Sendy.Admin')|raw }}
                </p>

                {{ form_start(carrierFormView, {
                    action: path('sendy_carriers_store'),
                    attr: {
                        id: 'sendyCreateCarrierForm',
                    }
                }) }}

                {{ form_widget(carrierFormView) }}

                {{ form_end(carrierFormView) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">
                    {{ 'Cancel'|trans({}, 'Admin.Actions') }}
                </button>
                <button type="submit" class="btn btn-primary js-submit-modal-form-btn" form="sendyCreateCarrierForm">
                    {{ 'Create'|trans({}, 'Admin.Actions') }}
                </button>
            </div>
        </div>
    </div>
</div>
